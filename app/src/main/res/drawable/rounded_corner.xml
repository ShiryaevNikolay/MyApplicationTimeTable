<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape
        android:shape="rectangle">

        <solid
            android:color="#03A9F4" />

        <corners
            android:radius="20dp"/>

        <gradient
            android:angle="45"
            android:endColor="#01f1fa"
            android:startColor="#0189ff"
            android:type="linear" />

        <stroke
            android:width="2dp"
            android:color="#0189ff"/>
    </shape>
</item>
<item>
    <rotate
        android:fromDegrees="90">
        <shape
            android:shape="line">

            <stroke
                android:color="#ffffff"
                android:width="20dp"/>
        </shape>
    </rotate>
</item>
    <item>
        <rotate
            android:fromDegrees="0">
            <shape
                android:shape="line">

                <stroke
                    android:color="#ffffff"
                    android:width="20dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>